{
    "name": "tanakahisateru/nyumon",
    "description": "nyumon project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3",
        "php-di/slim-bridge": "^3.1",
        "twig/twig": "^3.3",
        "symfony/dotenv": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "./tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "server": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8080 -t public public/index.php"
        ],
        "test": "vendor/bin/phpunit"
    }
}
